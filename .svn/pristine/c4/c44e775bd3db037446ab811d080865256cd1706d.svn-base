{% extends "base.html" %}

{% block title %}Edit Idea - {{ project.name }}{% endblock %}
{% block header %}Edit Idea{% endblock %}

{% block extra_css %}
<style>
  :root {
    --edit-bg: var(--bg, #0b0f1a);
    --edit-panel: var(--panel, #121a2a);
    --edit-card: var(--card, #0f1625);
    --edit-line: var(--line, #1f2a3d);
    --edit-text: var(--text, #e6eaf2);
    --edit-muted: var(--text-muted, #9fb0c8);
    --edit-primary: var(--primary, #6ea8ff);
    --edit-success: var(--success, #22c55e);
    --edit-danger: var(--danger, #ef4444);
    --edit-radius: var(--radius, 14px);
    --edit-shadow: 0 6px 18px rgba(0,0,0,.35);
  }

  .edit-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
  }

  .edit-card {
    background: var(--edit-card);
    border: 1px solid var(--edit-line);
    border-radius: var(--edit-radius);
    padding: 24px;
    box-shadow: var(--edit-shadow);
  }

  .project-context {
    background: linear-gradient(180deg, rgba(255,255,255,.04), rgba(255,255,255,.02));
    border: 1px solid var(--edit-line);
    border-radius: 12px;
    padding: 12px;
    margin-bottom: 20px;
  }

  .project-name {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--edit-text);
    margin-bottom: 4px;
  }

  .breadcrumb {
    color: var(--edit-muted);
    font-size: 0.9rem;
  }

  h1 {
    color: var(--edit-text);
    font-size: 1.5rem;
    margin: 0 0 20px 0;
    padding-bottom: 12px;
    border-bottom: 1px dashed var(--edit-line);
  }

  .form-group {
    margin-bottom: 16px;
  }

  label {
    display: block;
    color: var(--edit-text);
    font-weight: 700;
    margin-bottom: 8px;
    font-size: 0.95rem;
  }

  textarea, select {
    width: 100%;
    background: #0b1120;
    color: var(--edit-text);
    border: 1px solid var(--edit-line);
    border-radius: 10px;
    padding: 10px;
    font-size: 0.95rem;
    font-family: inherit;
    transition: border-color 0.2s ease;
  }

  textarea:focus, select:focus {
    outline: none;
    border-color: var(--edit-primary);
  }

  textarea {
    min-height: 120px;
    resize: vertical;
  }

  select {
    cursor: pointer;
  }

  .form-actions {
    display: flex;
    gap: 10px;
    margin-top: 24px;
    padding-top: 20px;
    border-top: 1px dashed var(--edit-line);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    border-radius: 12px;
    border: 1px solid var(--edit-line);
    background: var(--edit-card);
    color: var(--edit-text);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 700;
    cursor: pointer;
    transition: transform 0.1s ease, border-color 0.2s ease, background 0.2s ease;
  }

  .btn:hover {
    border-color: var(--edit-primary);
    transform: translateY(-1px);
  }

  .btn-primary {
    background: rgba(110,168,255,.18);
    border-color: rgba(110,168,255,.45);
  }

  .btn-primary:hover {
    background: rgba(110,168,255,.25);
  }

  .btn-secondary {
    background: transparent;
  }

  .idea-metadata {
    background: #0c1322;
    border: 1px solid var(--edit-line);
    border-radius: 10px;
    padding: 10px;
    margin-bottom: 16px;
    color: var(--edit-muted);
    font-size: 0.85rem;
  }

  .meta-row {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .meta-label {
    font-weight: 700;
  }

  .status-indicator {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 3px 10px;
    border-radius: 999px;
    font-size: 0.85rem;
    font-weight: 700;
  }

  .status-indicator.new {
    background: rgba(110,168,255,.18);
    color: var(--edit-primary);
  }

  .status-indicator.considered {
    background: rgba(249,158,11,.18);
    color: #f59e0b;
  }

  .status-indicator.implemented {
    background: rgba(34,197,94,.18);
    color: var(--edit-success);
  }

  .status-indicator.rejected {
    background: rgba(239,68,68,.18);
    color: var(--edit-danger);
  }
</style>
{% endblock %}

{% block content %}
<div class="edit-container">
  <div class="edit-card">
    <div class="project-context">
      <div class="project-name">{{ project.name }}</div>
      <div class="breadcrumb">Project â€º Ideas â€º Edit</div>
    </div>

    <h1>Edit Idea</h1>

    <div class="idea-metadata">
      <div class="meta-row">
        <span class="meta-label">Created:</span>
        <span>{{ idea.created_at.strftime('%B %d, %Y at %I:%M %p') }}</span>
      </div>
    </div>

    <form method="POST">
      <div class="form-group">
        <label for="content">Idea Content</label>
        <textarea name="content" id="content" required>{{ idea.content }}</textarea>
      </div>

      <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status">
          {% for status in idea_statuses %}
          <option value="{{ status }}" {% if idea.status == status %}selected{% endif %}>
            {{ status|replace('_',' ')|title }}
          </option>
          {% endfor %}
        </select>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary">ðŸ’¾ Save Changes</button>
        <a href="{{ url_for('projects.tch_detail', id=project.id) }}" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>
{% endblock %}