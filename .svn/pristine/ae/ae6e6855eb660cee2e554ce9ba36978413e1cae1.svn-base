{% extends "base.html" %}
{% block title %}Edit Idea - {{ project.name }}{% endblock %}
{% block header %}Edit Idea{% endblock %}

{% block extra_css %}
<style>
  :root {
    --ei-bg: var(--bg, #0b0f1a);
    --ei-card: var(--card, #0f1625);
    --ei-line: var(--line, #1f2a3d);
    --ei-text: var(--text, #e6eaf2);
    --ei-muted: var(--text-muted, #9fb0c8);
    --ei-primary: var(--primary, #6ea8ff);
    --ei-success: var(--success, #22c55e);
    --ei-danger: var(--danger, #ef4444);
    --ei-radius: 14px;
  }

  .edit-idea-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
  }

  .project-context {
    background: var(--ei-card);
    border: 1px solid var(--ei-line);
    border-radius: var(--ei-radius);
    padding: 12px;
    margin-bottom: 20px;
    color: var(--ei-muted);
  }

  .project-context strong {
    color: var(--ei-text);
  }

  .idea-form {
    background: var(--ei-card);
    border: 1px solid var(--ei-line);
    border-radius: var(--ei-radius);
    padding: 20px;
  }

  .form-section {
    margin-bottom: 25px;
  }

  .form-section h3 {
    margin-bottom: 15px;
    color: var(--ei-text);
    font-size: 1.1rem;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-group label {
    display: block;
    margin-bottom: 6px;
    color: var(--ei-muted);
    font-weight: 600;
  }

  .form-control {
    width: 100%;
    background: #0b1120;
    color: var(--ei-text);
    border: 1px solid var(--ei-line);
    border-radius: 10px;
    padding: 10px 12px;
    font-size: 0.95rem;
  }

  .form-control:focus {
    outline: none;
    border-color: var(--ei-primary);
  }

  textarea.form-control {
    resize: vertical;
    min-height: 120px;
  }

  .status-select {
    width: 100%;
    background: #0b1120;
    color: var(--ei-text);
    border: 1px solid var(--ei-line);
    border-radius: 10px;
    padding: 10px 12px;
    font-size: 0.95rem;
    cursor: pointer;
  }

  .status-select:focus {
    outline: none;
    border-color: var(--ei-primary);
  }

  .status-help {
    margin-top: 8px;
    padding: 10px;
    background: #0c1322;
    border: 1px solid var(--ei-line);
    border-radius: 8px;
  }

  .status-help ul {
    margin: 5px 0;
    padding-left: 20px;
  }

  .status-help li {
    color: var(--ei-muted);
    font-size: 0.85rem;
    margin: 3px 0;
  }

  .status-help strong {
    color: var(--ei-text);
  }

  .current-info {
    background: #0c1322;
    border: 1px solid var(--ei-line);
    border-radius: 10px;
    padding: 10px;
    margin-bottom: 15px;
  }

  .info-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
  }

  .info-label {
    color: var(--ei-muted);
    font-size: 0.85rem;
  }

  .info-value {
    color: var(--ei-text);
    font-size: 0.85rem;
  }

  .status-badge {
    display: inline-block;
    padding: 2px 8px;
    border-radius: 999px;
    font-weight: 700;
    font-size: 0.75rem;
  }

  .status-new {
    background: rgba(110, 168, 255, 0.18);
    color: #6ea8ff;
  }

  .status-considering {
    background: rgba(245, 158, 11, 0.18);
    color: #f59e0b;
  }

  .status-implemented {  /* Changed from .status-planned */
  background: rgba(34, 197, 94, 0.18);
  color: #22c55e;
}

  .status-rejected {
    background: rgba(239, 68, 68, 0.18);
    color: #ef4444;
  }

  .actions {
    display: flex;
    gap: 10px;
    justify-content: space-between;
    margin-top: 20px;
  }

  .btn {
    padding: 10px 20px;
    border-radius: 10px;
    border: 1px solid var(--ei-line);
    background: var(--ei-card);
    color: var(--ei-text);
    cursor: pointer;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn:hover {
    border-color: var(--ei-primary);
  }

  .btn-primary {
    background: var(--ei-primary);
    color: #0a0f1a;
    border-color: var(--ei-primary);
  }

  .btn-danger {
    background: #2a0f15;
    border-color: #7f1d1d;
    color: #fecaca;
  }

  .btn-danger:hover {
    border-color: var(--ei-danger);
  }

  .char-count {
    text-align: right;
    color: var(--ei-muted);
    font-size: 0.8rem;
    margin-top: 5px;
  }
</style>
{% endblock %}

{% block content %}
<div class="edit-idea-container">
  <!-- Project Context -->
  <div class="project-context">
    <strong>Project:</strong> {{ project.name }}
    {% if project.category %}
      | <strong>Category:</strong> {{ project.category }}
    {% endif %}
  </div>

  <!-- Edit Form -->
  <form method="POST" class="idea-form">
    <div class="form-section">
      <h3>üí° Edit Idea</h3>
      
      <!-- Current Info -->
      <div class="current-info">
        <div class="info-row">
          <span class="info-label">Created:</span>
          <span class="info-value">{{ idea.created_at.strftime('%B %d, %Y at %I:%M %p') }}</span>
        </div>
        <div class="info-row">
          <span class="info-label">Current Status:</span>
          <span class="status-badge status-{{ idea.status }}">{{ idea.status|title }}</span>
        </div>
      </div>

      <!-- Idea Content -->
      <div class="form-group">
        <label for="content">Idea Description <span style="color: var(--ei-danger);">*</span></label>
        <textarea name="content" id="content" class="form-control" 
                  required maxlength="500" 
                  onkeyup="updateCharCount()">{{ idea.content }}</textarea>
        <div class="char-count" id="char-count">
          {{ idea.content|length }}/500 characters
        </div>
      </div>

      <!-- Status -->
      <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="status-select">
          {% for stat in statuses %}
            <option value="{{ stat }}" {% if idea.status == stat %}selected{% endif %}>
              {{ stat|title }}
            </option>
          {% endfor %}
        </select>
        
        <div class="status-help">
          <ul>
            <li><strong>New:</strong> Fresh idea, not yet evaluated</li>
            <li><strong>Considering:</strong> Actively thinking about implementation</li>
            <li><strong>Implemented:</strong> Completed and added to the project</li> <!-- Changed from 'Planned' -->
            <li><strong>Rejected:</strong> Decided not to pursue</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="actions">
      <div>
        <a href="{{ url_for('persprojects.detail', id=project.id) }}" class="btn">Cancel</a>
      </div>
      <div style="display: flex; gap: 10px;">
        <button type="submit" class="btn btn-primary">Save Changes</button>
      </div>
    </div>
  </form>

  <!-- Delete Option -->
  <div style="margin-top: 40px; padding-top: 20px; border-top: 1px solid var(--ei-line);">
    <form method="POST" action="{{ url_for('persprojects.delete_idea', idea_id=idea.id) }}" 
          onsubmit="return confirm('Are you sure you want to delete this idea?\n\n{{ idea.content[:100] }}...');">
      <button type="submit" class="btn btn-danger">üóëÔ∏è Delete Idea</button>
    </form>
  </div>
</div>

<script>
function updateCharCount() {
  const textarea = document.getElementById('content');
  const counter = document.getElementById('char-count');
  const length = textarea.value.length;
  counter.textContent = `${length}/500 characters`;
  
  if (length > 450) {
    counter.style.color = 'var(--ei-danger)';
  } else {
    counter.style.color = 'var(--ei-muted)';
  }
}
</script>
{% endblock %}