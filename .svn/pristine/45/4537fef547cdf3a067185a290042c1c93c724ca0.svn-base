{% extends "base.html" %}
{% block title %}Edit Note - {{ project.name }}{% endblock %}
{% block header %}Edit Note{% endblock %}

{% block extra_css %}
<style>
  :root {
    --en-bg: var(--bg, #0b0f1a);
    --en-card: var(--card, #0f1625);
    --en-line: var(--line, #1f2a3d);
    --en-text: var(--text, #e6eaf2);
    --en-muted: var(--text-muted, #9fb0c8);
    --en-primary: var(--primary, #6ea8ff);
    --en-success: var(--success, #22c55e);
    --en-danger: var(--danger, #ef4444);
    --en-radius: 14px;
  }

  .edit-note-container {
    max-width: 650px;
    margin: 0 auto;
    padding: 20px;
  }

  .project-context {
    background: var(--en-card);
    border: 1px solid var(--en-line);
    border-radius: var(--en-radius);
    padding: 12px;
    margin-bottom: 20px;
    color: var(--en-muted);
  }

  .project-context strong {
    color: var(--en-text);
  }

  .note-form {
    background: var(--en-card);
    border: 1px solid var(--en-line);
    border-radius: var(--en-radius);
    padding: 20px;
  }

  .form-section {
    margin-bottom: 25px;
  }

  .form-section h3 {
    margin-bottom: 15px;
    color: var(--en-text);
    font-size: 1.1rem;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-group label {
    display: block;
    margin-bottom: 6px;
    color: var(--en-muted);
    font-weight: 600;
  }

  .form-control {
    width: 100%;
    background: #0b1120;
    color: var(--en-text);
    border: 1px solid var(--en-line);
    border-radius: 10px;
    padding: 10px 12px;
    font-size: 0.95rem;
  }

  .form-control:focus {
    outline: none;
    border-color: var(--en-primary);
  }

  textarea.form-control {
    resize: vertical;
    min-height: 150px;
    line-height: 1.5;
  }

  .note-info {
    background: #0c1322;
    border: 1px solid var(--en-line);
    border-radius: 10px;
    padding: 10px;
    margin-bottom: 15px;
    font-size: 0.85rem;
    color: var(--en-muted);
  }

  .note-info strong {
    color: var(--en-text);
  }

  .category-help {
    margin-top: 8px;
    padding: 10px;
    background: #0c1322;
    border: 1px solid var(--en-line);
    border-radius: 8px;
    font-size: 0.85rem;
  }

  .category-help ul {
    margin: 5px 0;
    padding-left: 20px;
  }

  .category-help li {
    color: var(--en-muted);
    margin: 3px 0;
  }

  .actions {
    display: flex;
    gap: 10px;
    justify-content: space-between;
    margin-top: 20px;
  }

  .btn {
    padding: 10px 20px;
    border-radius: 10px;
    border: 1px solid var(--en-line);
    background: var(--en-card);
    color: var(--en-text);
    cursor: pointer;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn:hover {
    border-color: var(--en-primary);
  }

  .btn-primary {
    background: var(--en-primary);
    color: #0a0f1a;
    border-color: var(--en-primary);
  }

  .btn-danger {
    background: #2a0f15;
    border-color: #7f1d1d;
    color: #fecaca;
  }

  .btn-danger:hover {
    border-color: var(--en-danger);
  }

  .char-count {
    text-align: right;
    color: var(--en-muted);
    font-size: 0.8rem;
    margin-top: 5px;
  }

  .required {
    color: var(--en-danger);
  }
</style>
{% endblock %}

{% block content %}
<div class="edit-note-container">
  <!-- Project Context -->
  <div class="project-context">
    <strong>Project:</strong> {{ project.name }}
    {% if project.category %}
      | <strong>Category:</strong> {{ project.category }}
    {% endif %}
  </div>

  <!-- Edit Form -->
  <form method="POST" class="note-form">
    <div class="form-section">
      <h3>üìù Edit Note</h3>
      
      <!-- Note Info -->
      <div class="note-info">
        <strong>Created:</strong> {{ note.created_at.strftime('%B %d, %Y at %I:%M %p') }}
        {% if note.category %}
          | <strong>Category:</strong> {{ note.category|title }}
        {% endif %}
      </div>

      <!-- Note Content -->
      <div class="form-group">
        <label for="content">Note Content <span class="required">*</span></label>
        <textarea name="content" id="content" class="form-control" 
                  required maxlength="1000" 
                  onkeyup="updateCharCount()">{{ note.content }}</textarea>
        <div class="char-count" id="char-count">
          {{ note.content|length }}/1000 characters
        </div>
      </div>

      <!-- Category -->
      <div class="form-group">
        <label for="category">Category</label>
        <select name="category" id="category" class="form-control">
          {% for cat in categories %}
            <option value="{{ cat }}" {% if note.category == cat %}selected{% endif %}>
              {{ cat|title }}
            </option>
          {% endfor %}
        </select>
        
        <div class="category-help">
          <ul>
            <li><strong>General:</strong> Default for most notes</li>
            <li><strong>Progress:</strong> Updates on project advancement</li>
            <li><strong>Issue:</strong> Problems or blockers encountered</li>
            <li><strong>Research:</strong> Information gathering and findings</li>
            <li><strong>Reference:</strong> Links, resources, or documentation</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="actions">
      <div>
        <a href="{{ url_for('persprojects.detail', id=project.id) }}" class="btn">Cancel</a>
      </div>
      <div style="display: flex; gap: 10px;">
        <button type="submit" class="btn btn-primary">Save Changes</button>
      </div>
    </div>
  </form>

  <!-- Delete Option -->
  <div style="margin-top: 40px; padding-top: 20px; border-top: 1px solid var(--en-line);">
    <form method="POST" action="{{ url_for('persprojects.delete_note', note_id=note.id) }}" 
          onsubmit="return confirm('Are you sure you want to delete this note?');">
      <button type="submit" class="btn btn-danger">üóëÔ∏è Delete Note</button>
    </form>
  </div>
</div>

<script>
function updateCharCount() {
  const textarea = document.getElementById('content');
  const counter = document.getElementById('char-count');
  const length = textarea.value.length;
  counter.textContent = `${length}/1000 characters`;
  
  if (length > 950) {
    counter.style.color = 'var(--en-danger)';
  } else {
    counter.style.color = 'var(--en-muted)';
  }
}

// Auto-resize textarea as user types
document.getElementById('content').addEventListener('input', function() {
  this.style.height = 'auto';
  this.style.height = (this.scrollHeight) + 'px';
});

// Initial resize
window.addEventListener('load', function() {
  const textarea = document.getElementById('content');
  textarea.style.height = (textarea.scrollHeight) + 'px';
});
</script>
{% endblock %}