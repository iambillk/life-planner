{% extends "base.html" %}
{% block title %}Edit Milestone - {{ project.name }}{% endblock %}
{% block header %}Edit Milestone{% endblock %}

{% block extra_css %}
<style>
  :root {
    --em-bg: var(--bg, #0b0f1a);
    --em-card: var(--card, #0f1625);
    --em-line: var(--line, #1f2a3d);
    --em-text: var(--text, #e6eaf2);
    --em-muted: var(--text-muted, #9fb0c8);
    --em-primary: var(--primary, #6ea8ff);
    --em-success: var(--success, #22c55e);
    --em-danger: var(--danger, #ef4444);
    --em-warning: var(--warning, #f59e0b);
    --em-radius: 14px;
  }

  .edit-milestone-container {
    max-width: 650px;
    margin: 0 auto;
    padding: 20px;
  }

  .project-context {
    background: var(--em-card);
    border: 1px solid var(--em-line);
    border-radius: var(--em-radius);
    padding: 12px;
    margin-bottom: 20px;
    color: var(--em-muted);
  }

  .project-context strong {
    color: var(--em-text);
  }

  .milestone-form {
    background: var(--em-card);
    border: 1px solid var(--em-line);
    border-radius: var(--em-radius);
    padding: 20px;
  }

  .form-section {
    margin-bottom: 25px;
  }

  .form-section h3 {
    margin-bottom: 15px;
    color: var(--em-text);
    font-size: 1.1rem;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-group label {
    display: block;
    margin-bottom: 6px;
    color: var(--em-muted);
    font-weight: 600;
  }

  .form-control {
    width: 100%;
    background: #0b1120;
    color: var(--em-text);
    border: 1px solid var(--em-line);
    border-radius: 10px;
    padding: 10px 12px;
    font-size: 0.95rem;
  }

  .form-control:focus {
    outline: none;
    border-color: var(--em-primary);
  }

  textarea.form-control {
    resize: vertical;
    min-height: 80px;
  }

  .current-status {
    background: #0c1322;
    border: 1px solid var(--em-line);
    border-radius: 10px;
    padding: 12px;
    margin-bottom: 15px;
  }

  .status-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
  }

  .status-row:last-child {
    margin-bottom: 0;
  }

  .status-label {
    color: var(--em-muted);
    font-size: 0.9rem;
  }

  .status-value {
    color: var(--em-text);
    font-size: 0.9rem;
    font-weight: 600;
  }

  .completed-badge {
    background: var(--em-success);
    color: #0a0f1a;
    padding: 3px 10px;
    border-radius: 999px;
    font-weight: 700;
    font-size: 0.8rem;
  }

  .pending-badge {
    background: rgba(245, 158, 11, 0.18);
    color: var(--em-warning);
    padding: 3px 10px;
    border-radius: 999px;
    font-weight: 700;
    font-size: 0.8rem;
  }

  .overdue-warning {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 8px;
    padding: 10px;
    margin-bottom: 15px;
    color: var(--em-danger);
    font-size: 0.9rem;
  }

  .date-help {
    color: var(--em-muted);
    font-size: 0.85rem;
    margin-top: 5px;
  }

  .actions {
    display: flex;
    gap: 10px;
    justify-content: space-between;
    margin-top: 20px;
  }

  .btn {
    padding: 10px 20px;
    border-radius: 10px;
    border: 1px solid var(--em-line);
    background: var(--em-card);
    color: var(--em-text);
    cursor: pointer;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn:hover {
    border-color: var(--em-primary);
  }

  .btn-primary {
    background: var(--em-primary);
    color: #0a0f1a;
    border-color: var(--em-primary);
  }

  .btn-danger {
    background: #2a0f15;
    border-color: #7f1d1d;
    color: #fecaca;
  }

  .btn-danger:hover {
    border-color: var(--em-danger);
  }

  .char-count {
    text-align: right;
    color: var(--em-muted);
    font-size: 0.8rem;
    margin-top: 5px;
  }

  .required {
    color: var(--em-danger);
  }
</style>
{% endblock %}

{% block content %}
<div class="edit-milestone-container">
  <!-- Project Context -->
  <div class="project-context">
    <strong>Project:</strong> {{ project.name }}
    {% if project.category %}
      | <strong>Category:</strong> {{ project.category }}
    {% endif %}
  </div>

  <!-- Edit Form -->
  <form method="POST" class="milestone-form">
    <div class="form-section">
      <h3>üèÅ Edit Milestone</h3>
      
      <!-- Current Status -->
      <div class="current-status">
        <div class="status-row">
          <span class="status-label">Status:</span>
          <span class="status-value">
            {% if milestone.completed %}
              <span class="completed-badge">‚úì COMPLETED</span>
            {% else %}
              <span class="pending-badge">‚è≥ PENDING</span>
            {% endif %}
          </span>
        </div>
        {% if milestone.target_date %}
        <div class="status-row">
          <span class="status-label">Target Date:</span>
          <span class="status-value">{{ milestone.target_date.strftime('%B %d, %Y') }}</span>
        </div>
        {% endif %}
        {% if milestone.completed_date %}
        <div class="status-row">
          <span class="status-label">Completed On:</span>
          <span class="status-value">{{ milestone.completed_date.strftime('%B %d, %Y') }}</span>
        </div>
        {% endif %}
      </div>

      <!-- Overdue Warning -->
      {% if milestone.target_date and not milestone.completed %}
        {% set now = datetime.now().date() %}
        {% if milestone.target_date < now %}
        <div class="overdue-warning">
          ‚ö†Ô∏è This milestone is overdue by {{ (now - milestone.target_date).days }} days
        </div>
        {% endif %}
      {% endif %}

      <!-- Milestone Title -->
      <div class="form-group">
        <label for="title">Milestone Title <span class="required">*</span></label>
        <input type="text" name="title" id="title" class="form-control" 
               value="{{ milestone.title }}" required maxlength="200">
        <div class="char-count" id="title-count">
          {{ milestone.title|length }}/200 characters
        </div>
      </div>

      <!-- Description -->
      <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" class="form-control" 
                  maxlength="500" placeholder="Optional: Add more details about this milestone...">{{ milestone.description or '' }}</textarea>
        <div class="char-count" id="desc-count">
          {{ (milestone.description|length if milestone.description else 0) }}/500 characters
        </div>
      </div>

      <!-- Target Date -->
      <div class="form-group">
        <label for="target_date">Target Date</label>
        <input type="date" name="target_date" id="target_date" class="form-control" 
               value="{{ milestone.target_date.strftime('%Y-%m-%d') if milestone.target_date else '' }}">
        <div class="date-help">
          Optional: When do you aim to complete this milestone?
          {% if milestone.completed %}
          <br><strong>Note:</strong> This milestone is already completed. Changing the target date won't affect the completion date.
          {% endif %}
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="actions">
      <div>
        <a href="{{ url_for('persprojects.detail', id=project.id) }}" class="btn">Cancel</a>
      </div>
      <div style="display: flex; gap: 10px;">
        <button type="submit" class="btn btn-primary">Save Changes</button>
      </div>
    </div>
  </form>

  <!-- Additional Actions -->
  <div style="margin-top: 40px; padding-top: 20px; border-top: 1px solid var(--em-line);">
    <div style="display: flex; gap: 10px; flex-wrap: wrap;">
      <!-- Toggle Completion -->
      <form method="POST" action="{{ url_for('persprojects.complete_milestone', milestone_id=milestone.id) }}" 
            style="display:inline;">
        <button type="submit" class="btn">
          {% if milestone.completed %}
            ‚Ü∫ Mark as Pending
          {% else %}
            ‚úì Mark as Completed
          {% endif %}
        </button>
      </form>

      <!-- Delete -->
      <form method="POST" action="{{ url_for('persprojects.delete_milestone', milestone_id=milestone.id) }}" 
            onsubmit="return confirm('Are you sure you want to delete this milestone?\n\n{{ milestone.title }}');"
            style="display:inline;">
        <button type="submit" class="btn btn-danger">üóëÔ∏è Delete Milestone</button>
      </form>
    </div>
  </div>
</div>

<script>
// Character counter for title
document.getElementById('title').addEventListener('input', function() {
  const length = this.value.length;
  document.getElementById('title-count').textContent = `${length}/200 characters`;
});

// Character counter for description
document.getElementById('description').addEventListener('input', function() {
  const length = this.value.length;
  const counter = document.getElementById('desc-count');
  counter.textContent = `${length}/500 characters`;
  
  if (length > 450) {
    counter.style.color = 'var(--em-danger)';
  } else {
    counter.style.color = 'var(--em-muted)';
  }
});

// Date validation
document.getElementById('target_date').addEventListener('change', function() {
  const selectedDate = new Date(this.value);
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  
  if (selectedDate < today) {
    if (!confirm('This date is in the past. Are you sure you want to set a past target date?')) {
      this.value = '';
    }
  }
});
</script>
{% endblock %}